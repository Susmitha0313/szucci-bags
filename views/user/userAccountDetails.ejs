<script>


// Add an event listener to the form submission
document.getElementById('updatePswd').addEventListener('submit', async function(event) {
    event.preventDefault(); // Prevent the default form submission

    const currentPassword = document.getElementById('current-pwd').value;
    const newPassword = document.getElementById('new-pwd').value;
    const confirmNewPassword = document.getElementById('confirm-pwd').value;

    // Send AJAX request to the server
    try {
        const response = await fetch('/updatePassword', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({ currentPassword, newPassword, confirmNewPassword })
        });

        const data = await response.json();

        if (response.ok) {
            // Password updated successfully
            alert(data.message);
        } else {
            // Display error message
            alert(data.message);
        }
    } catch (error) {
        console.error('Error:', error);
        // Display a generic error message
        alert('An error occurred while updating the password. Please try again later.');
    }
});

    

    

