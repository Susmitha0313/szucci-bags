                                        <% if(proData[i].salePrice) {%>
                                        <span style="color: green;" class="new-price">₹ <%= proData[i].salePrice%></span>
                                        <span class="old-price" style="font-size: 14px; font-weight: 400; color: #90908e; margin: 0 0 0 7px; text-decoration: line-through;">₹ <%= proData[i].regularPrice%></span>
                                        <% if (proData[i].regularPrice && proData[i].salePrice) { %>
                                            <% var offerPercentage = ((proData[i].regularPrice - proData[i].salePrice) / proData[i].regularPrice) * 100; %>
                                            <div class="rating-result" title="<%= offerPercentage.toFixed(2) %>%">
                                                <span>
                                                    <span style="color: red;"><%= offerPercentage.toFixed(0) %>% off</span>
                                                </span>
                                            </div>
                                        <% } %>
                                    <% } else { %>
                                        <span>₹<%= proData[i].regularPrice %></span>
                                    <% } %>
                                    </div>
                                    <p><%= proData[i].description %></p>
                                    <div class="product-list-action">
                                        <a title="Add to Wishlist" href="#"><i class="fa fa-heart"></i></a>
                                        <div class="pro-list-actioncart">
