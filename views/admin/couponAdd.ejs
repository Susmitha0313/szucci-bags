                                    <div class="mb-4">
                                        <label for="startDate" class="form-label">Starting Date</label>
                                        <input id="startDate" name="startDate" placeholder="when should the coupon offer start" type="date" class="form-control"></input>
                                        <p>
                                        <div id="startDateErr" class=" text-danger"></div>
                                        </p>
                                    </div>

                                    <div class="mb-4">
                                        <label for="endDate" class="form-label">Ending Date</label>
                                        <input id="endDate" name="endDate" placeholder="when should the offer end" type="date" class="form-control"></input>
                                        <p>
                                        <div id="endDateErr" class=" text-danger"></div>
                                        </p>
                                    </div>


                                    <div class="row">
                                        <div class="col-lg-4">
                                            <div class="mb-4">
                                                <div class="row gx-2">
                                                    <label for="minimumBuyRate" class="form-label">Minimum buying price</label>
                                                    <input id="minimumBuyRate" placeholder="₹" name="minBuyRate" type="text" class="form-control">
                                                    <p>
                                                    <div id="minErr" class=" text-danger"></div>
                                                    </p>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-lg-4">
                                            <div class="mb-4">
                                                <label for="maximumBuyRate" class="form-label">Maximum buying price</label>
                                                <input id="maximumBuyRate" placeholder="₹" name="maxBuyRate" type="text" class="form-control">
                                                <p>
                                                <div id="maxErr" class=" text-danger"></div>
                                                </p>
                                            </div>
                                        </div>
                                        <div class="mb-4">
                                            <label for="discountPercent" class="form-label">Discount %</label>
                                            <input id="discountPercent" name="discountPercent" placeholder="Type here" type="number"
                                                class="form-control"></input>
                                            <p>
                                            <div id="discerror" class=" text-danger"></div>
                                            </p>
                                        </div>
                                    </div>
