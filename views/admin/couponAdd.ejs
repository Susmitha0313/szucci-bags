                            <button type="submit" class="btn btn-md rounded font-sm hover-up"> Save Coupon </button>

                            </form>
                        </div>

                    </div>
            </section>


            <script>

                document.addEventListener("DOMContentLoaded", function () {
                    const couponAddForm = document.getElementById("couponAddForm");

                    function nameValidation() {
                        const coupName = document.getElementById("coupon_name").value;
                        const nameError = document.getElementById("nameError");
                        // Validation logic for product name
                        if (coupName.trim() === "") {
                            nameError.innerHTML = "Please enter valid name"
                            return false
                        } else if (coupName.length <= 3) {
                            nameError.innerHTML = "Name must need atleast 3 character"
                            return false
                        } else if (coupName.length >= 20) {
                            nameError.innerHTML = "Name can't exceed 20 character"
                            return false
                        } else if ((!/^[A-Za-z\s]+$/.test(coupName))) {
                            nameError.innerHTML = "Name can't contain characters other than alphabets, underscore and &"
                            return false
                        }
                        nameError.innerHTML = "";
                        return true
                    }

                    function dateValidation() { 
                        const startDate = document.getElementById("startDate").value;
                        const endDate = document.getElementById("endDate").value;
                        const startDateErr = document.getElementById("startDateErr");
                        const endDateErr = document.getElementById("endDateErr");
                        if (startDate.trim() === "") {
                            startDateErr.innerHTML = "Please enter a valid start date";
                            return false;
                        }
                        if (endDate.trim() === "") {
                            endDateErr.innerHTML = "Please enter a valid end date";
                            return false;
                        }
                        const startDateObj = new Date(startDate);
                        const endDateObj = new Date(endDate);
                        const currentDate = new Date();
                        if (startDateObj < currentDate) {
                            startDateErr.innerHTML = "Start date cannot be in the past";
                            return false;
                        }
                        if (endDateObj <= startDateObj) {
                            endDateErr.innerHTML = "End date must be after start date";
                            return false;
                        }
                        startDateErr.innerHTML = "";
                        endDateErr.innerHTML = "";
                    
                        return true;
                    }
                        
                        
                    function rateValidation() {
                        const minRateInput = document.getElementById("minimumBuyRate");
                        const maxRateInput = document.getElementById("maximumBuyRate");
                        const minRate = minRateInput.value.trim();
                        const maxRate = maxRateInput.value.trim();
                        const minErr = document.getElementById("minErr");
                        const maxErr = document.getElementById("maxErr");
                        if (minRate === "") {
                            minErr.innerHTML = "Please enter a valid amount";
                            maxErr.innerHTML = ""; 
                            return false;
                        }
                        if (maxRate === "") {
                            maxErr.innerHTML = "Please enter a valid amount";
                            minErr.innerHTML = ""; 
                            return false;
                        }
                        if (!/^\d+$/.test(minRate)) {
                            minErr.innerHTML = "Price cannot contain characters other than numbers";
                            maxErr.innerHTML = ""; 
                            return false;
                        }
                        if (!/^\d+$/.test(maxRate)) {
                            maxErr.innerHTML = "Price cannot contain characters other than numbers";
                            minErr.innerHTML = ""; 
                            return false;
                        }
                        const minRateValue = parseInt(minRate);
                        const maxRateValue = parseInt(maxRate);
                        if (minRateValue < 100 || minRateValue > 100000) {
                            minErr.innerHTML = "Price must be between 100 and 100,000";
                            maxErr.innerHTML = ""; 
                            return false;
                        }
                        if (maxRateValue < 100 || maxRateValue > 100000) {
                            maxErr.innerHTML = "Price must be between 100 and 100,000";
                            minErr.innerHTML = ""; 
                            return false;
                        }
                        if (maxRateValue < minRateValue) {
                            maxErr.innerHTML = "maximum price cannot exceed minimum price";
                            minErr.innerHTML = ""; 
                            return false;
                        }
                        minErr.innerHTML = "";
                        maxErr.innerHTML = "";
                        return true;
                    }


                    function discountValidation() {
                        const discount = document.getElementById("discountPercent").value;
                        const discerror = document.getElementById("discerror");
                        
                        // Validation logic for product discount
                        if (discount.trim() === "") {
                            discerror.innerHTML = "Please enter a valid product discount";
                            return false;
                        } else if (!/^\d+(\.\d{1,2})?$/.test(discount)) {
                            discerror.innerHTML = "Discount should be a positive number with up to two decimal places";
                            return false;
                        } else {
                            const discountValue = parseFloat(discount);
                            if (discountValue <= 0) {
                                discerror.innerHTML = "Product discount should be greater than 0";
                                return false;
                            } else if (discountValue > 100) {
                                discerror.innerHTML = "Product discount cannot exceed 100%";
                                return false;
                            }
                            discerror.innerHTML = ""; // Clear the error message here
                            return true; // Return true for valid input
                        }
                    }



                    couponAddForm.addEventListener("submit", function (e) {
                        nameValidation();
                        dateValidation();
                        rateValidation();
                        discountValidation();
                       
                        if (
                            nameError.innerHTML ||
                            startDateErr.innerHTML ||
                            minErr.innerHTML ||
                            maxErr.innerHTML ||
                            discerror.innerHTML ||
                            imageError.innerHTML) {
                            e.preventDefault();
                        }
                    });

                    document.getElementById("coupon_name").addEventListener("blur", nameValidation);
                    document.getElementById("startDate").addEventListener("blur", dateValidation);
                    document.getElementById("endDate").addEventListener("blur", dateValidation);
                    document.getElementById("minimumBuyRate").addEventListener("blur", rateValidation);
                    document.getElementById("maximumBuyRate").addEventListener("blur", rateValidation);
                    document.getElementById("discountPercent").addEventListener("blur", discountValidation);
                });

            </script>

