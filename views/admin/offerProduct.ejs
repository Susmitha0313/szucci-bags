                <div class="card">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-5">
                                <form id="createOffer" action="/admin/prodofferadd " method="post">
                                    <p class="form-label"><h6>Add New Offer</h6></p>
                                    <div class="row">
                                        <div class="col-md-6 col-sm-6">
                                            <label for="offername" class="form-label">Offer Name</label>
                                            <input id="offername" type="text" name="offerName" placeholder="Type here"class="form-control" />
                                            <p><div id="nameError" class=" text-danger "></div></p>
                                        </div>
                                        <div class="col-md-6 col-sm-6">
                                            <label for="disPercent" class="form-label">Discount %</label>
                                            <input id="disPercent" type="number" name="discountPercent" placeholder="Type here"class="form-control" />
                                            <p><div id="discerror"  class=" text-danger "></div></p>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6 col-sm-6">
                                            <label for="enddate" class="form-label">End Date</label>
                                            <input id="enddate" type="date" name="endDate" placeholder="Type here"class="form-control" />
                                            <p><div id="endDateErr"  class=" text-danger "></div></p>
                                        </div>
                                        <div class="col-md-6 col-sm-6">
                                            <div id="productDiv">
                                                <label class="form-label">Products</label><br>
                                                <% for(let i=0; i< proData.length; i++){ %>
                                                    <input type="checkbox" name="product" id="prod<%= i %>" value="<%= proData[i]._id %>">
                                                    <label for="prod<%= i %>"><%= proData[i].productName %></label><br>
                                                <% } %>
