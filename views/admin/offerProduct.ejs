<script>

    document.addEventListener("DOMContentLoaded", function () {
        const createOffer = document.getElementById("createOffer");
        const productDiv = document.getElementById("productDiv");
        const errorOffer = document.getElementById("errorOffer");
        const errorProd = document.getElementById("errorProd");

        function nameValidation() {
            const coupName = document.getElementById("offername").value;
            const nameError = document.getElementById("nameError");
            // Validation logic for product name
            if (coupName.trim() === "") {
                nameError.innerHTML = "Please enter valid name"
                return false
            } else if (coupName.length <= 3) {
                nameError.innerHTML = "Name must need atleast 3 character"
                return false
            } else if (coupName.length >= 20) {
                nameError.innerHTML = "Name can't exceed 20 character"
                return false
            } else if ((!/^[A-Za-z\s]+$/.test(coupName))) {
                nameError.innerHTML = "Name can't contain characters other than alphabets, underscore and &"
                return false
            }
            nameError.innerHTML = "";
            return true
        }


        function dateValidation() {
            const endDateStr = document.getElementById("enddate").value.trim();
            const endDate = new Date(endDateStr); // Parse the date string to a Date object
            const endDateErr = document.getElementById("endDateErr");
            const currentDate = new Date(); // Get the current date

            if (endDateStr === "") {
                endDateErr.innerHTML = "Please enter a valid end date";
                return false;
            } else if (endDate <= currentDate) {
                endDateErr.innerHTML = "End date must be after the current date";
                return false;
            }

            endDateErr.innerHTML = "";
            return true;
        }

            
            
      


        function discountValidation() {
            const discount = document.getElementById("disPercent").value;
            const discerror = document.getElementById("discerror");
            
            if (discount.trim() === "") {
                discerror.innerHTML = "Please enter a valid product discount";
                return false;
            } else if (!/^\d+(\.\d{1,2})?$/.test(discount)) {
                discerror.innerHTML = "Discount should be a positive number with up to two decimal places";
                return false;
            } else {
                const discountValue = parseFloat(discount);
                if (discountValue <= 0) {
                    discerror.innerHTML = "Product discount should be greater than 0";
                    return false;
                } else if (discountValue > 100) {
                    discerror.innerHTML = "Product discount cannot exceed 100%";
                    return false;
                }
                discerror.innerHTML = ""; // Clear the error message here
                return true; // Return true for valid input
            }
        }



        function validateCheckboxes() {
                const productCheckboxes = document.querySelectorAll('input[name="product"]:checked');
                if (productCheckboxes.length === 0) {
                    errorProd.innerHTML = "Please select at least one product";
                    return false;
                }
                errorProd.innerHTML = "";
                return true;
            }


        createOffer.addEventListener("submit", function (e) {
            nameValidation();
            dateValidation();
            discountValidation();
            validateCheckboxes();
           
            if (
                nameError.innerHTML ||
                endDateErr.innerHTML ||
                discerror.innerHTML ||
                errorProd.innerHTML
            ) {
                e.preventDefault();
            }
        });

        document.getElementById("offername").addEventListener("blur", nameValidation);
        document.getElementById("enddate").addEventListener("blur", dateValidation);
        document.getElementById("disPercent").addEventListener("blur", discountValidation);
        document.getElementById("productDiv").addEventListener("blur", validateCheckboxes);
    });

</script>
    
