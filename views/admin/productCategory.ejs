<section class="content-main">
    <div class="content-header">
        <div>
            <h2 class="content-title card-title">Categories </h2>
            <p>Add, edit or delete a category</p>
        </div>

        <div>
            <input type="text"  placeholder="Search Categories" class="form-control bg-white">
        </div>
    </div>
    <div class="card">
        <div class="card-body">    
            <div class="row">
                <div class="col-md-3">


                    <form id="createCat" action="/admin/category" method="post">
                        <div class="mb-4">
                               <p class="form-label"><h6>Add New Category</h6></p>
                            <label for="productName" class="form-label">Name</label>
                            <input id="productName" type="text" name="name" placeholder="Type here" class="form-control" />
                        </div>
                        <p><div id="error1" style="display: none;" class="alert alert-danger err"></div></p>

                        <div class="mb-4">
                            <label for="productDescription" class="form-label">Description</label>
                            <textarea id="productDescription" name="description"  placeholder="Type here" class="form-control" ></textarea>
                        </div>
                        <p><div id="error2" style="display: none;" class="alert alert-danger err"></div></p>
                        <% if(typeof errMsg !== "undefined") {%>
                        <p style="color: red;"><%= errMsg %></p>
                        <% } %>
                        <div class="d-grid">
                            <button type="submit" id="submitBtn" class="btn btn-primary">Create category</button>
                        </div>
                        <p><div id="message" style="display: none; color: #155724;" class="alert alert-success "></div></p>
                        
                    </form>
                </div>
                <div class="col-md-9">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <!-- <th class="text-center">
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" value="" />
                                        </div>
                                    </th> -->
                                    
                                    <th>Name</th>
                                    <th>Description</th>
                                    <th>Edit </th>
                                    <th>Block/Unblock</th>
                                    <th>Delete</th>
                                </tr>
                            </thead>    

                            <tbody>
                                <% category.forEach(cat => { %>
                                <tr>
                                    <td><b><%= cat.name %></b></td>
                                    <td><%= cat.description %></td>
                                    <td><a href="/admin/categoryEdit/<%= cat._id %>">
                                        <button class="toggleBtn btn btn-sm font-sm rounded" style="background-color: rgb(49, 103, 100);">Edit</button>
                                    </a>
                                    </td>
                                    <td>
                                        <% if (cat.isBlocked === true) { %>
                                            <a href="/admin/categoryBlock?categoryName=<%= cat.name %>">
                                                <button class="toggleBtn btn btn-sm font-sm btn-brand rounded">Unblock</button>
                                            </a>
                                        <% } else { %>
                                            <a href="/admin/categoryBlock?categoryName=<%= cat.name %>">
                                                <button class="toggleBtn btn btn-sm font-sm btn-brand rounded">Block</button>
                                            </a>
                                        <% } %>
                                    </td>
                                    <td>
                                        <button class="toggleBtn btn btn-sm font-sm btn-brand rounded" onclick="confirmDelete('<%= cat.name %>')">Delete</button>
                                    </td>
                                            
                                    
                                </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    </div>
                </div> <!-- .col// -->
            </div> <!-- .row // -->
        </div> <!-- card body .// -->
    </div> <!-- card .// -->
</section>



<script>
    const prodName = document.getElementById("productName");
    const prodDescri = document.getElementById("productDescription");
    const error1 = document.getElementById("error1");
    const error2 = document.getElementById("error2");
    const createCat = document.getElementById("createCat");
   
    
    function catNameValidation() {
        const catName = prodName.value.trim();
        if (!catName) {
            error1.style.display = "block";
            error1.innerHTML = "Please enter a category name.";
        } else {
            error1.style.display = "none";
            error1.innerHTML = "";
        }
    }
    
    function catDescValidation() {
        const catDesc = prodDescri.value.trim();
        if (!catDesc) {
            error2.style.display = "block";
            error2.innerHTML = "Please enter a description.";
        } else {
            error2.style.display = "none";
            error2.innerHTML = "";
        }
    }

    function confirmDelete(categoryName) {
        if (confirm(`Are you sure you want to delete the category "${categoryName}"?`)) {
            // Redirect to the deletion URL
            window.location.href = `/admin/deleteCategory?categoryName=${categoryName}`;
        }
    }

    
    const messageDiv = document.getElementById("message"); 
    prodName.addEventListener("blur", catNameValidation);
    prodDescri.addEventListener("blur", catDescValidation);
    createCat.addEventListener("blur", {catDescValidation,catNameValidation});
    </script>

