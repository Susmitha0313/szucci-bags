        <section class="content-main">
            <div class="content-header">
                <div>
                    <h2 class="content-title card-title">Coupons</h2>
                    <p>add coupons for special occations</p>
                </div>
                <div>
                    <a href="/admin/couponAdd" class="btn btn-primary btn-sm rounded">Create new</a>
                </div>
            </div>
            <div class="card mb-4">
               
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover text-center">
                            <thead>
                                <tr>
                                    <th>Coupon ID</th>
                                    <th>Name</th>
                                    <th>Discount%</th>
                                    <th>Amount</th>
                                    <th>Status</th>
                                    <th>Date</th>
                                    <th class="text-end">Block</th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                    <% for(let i=0; i<couponData.length; i++) { %>
                    <article class="itemlist">
                        <div class="row align-items-center text-center">
                            <!-- <div class="col col-check flex-grow-0">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox">
                                </div>
                            </div>
                            -->
                            <div class="col-lg-2 col-sm-2 col-price"> <span><%= couponData[i].coupencode %></span> 
                            </div>
                            <div class="col-lg-2 col-sm-2 "> <span><%= couponData[i].couponName %></span> 
                            </div>
                            <div class="col-lg-2 col-sm-2 "> <span><%= couponData[i].discountPercentage %>%</span> 
                            </div>
                            <div class="col-lg-2 col-sm-2 "> 
                                <span>min: ₹<%= couponData[i].minBuyRate %></span> <br>
                                <span>max: ₹<%= couponData[i].maxBuyRate %></span> 
                            </div>
                            <div class="col-lg-1 col-sm-1 ">
                                <span class="badge rounded-pill alert-success"><%= couponData[i].couponStatus %></span>
                            </div>
                            <div class="col-lg-2 col-sm-2 col-date">
                                <span>From: <%= couponData[i].startDate %></span><br>
                                <span>Till: <%= couponData[i].endDate %></span>
                            </div>
                            
                            <div class="col-lg-1 col-sm-1 col-action text-end">
                                <% if (couponData[i].isBlocked === true) { %>
                                    <a href="/admin/productBlock?productName=<%= couponData[i].couponName %>">
                                        <button class="toggleBtn btn btn-sm font-sm  rounded">Unblock</button>
                                    </a>
                                <% } else { %>
                                    <a href="/admin/productBlock?productName=<%= couponData[i].couponName %>">
                                        <button class="toggleBtn btn btn-sm font-sm btn-brand rounded">Block</button>
                                    </a>
                                <% } %>        
                            </div>
                        </div> 
                    </article> 
                    <% } %>
                  
                </div>
            </div> 
           
        </section>
