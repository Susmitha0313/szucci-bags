                        <% console.log("cat id is this ....."+category._id) %>
                        <form id="editCatId" action="/admin/categoryEdit"   method="post">
                            <input type="hidden" name="categoryId" value="<%= category._id %>" />
                            <% if(locals.errMsg) {%>
                                <p style="color: red;"><%= errMsg %></p>
                                <% } %>
                            <div class="mb-4">
