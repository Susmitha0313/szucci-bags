                                <input type="text" name="categName" value="<%= category.name %>" placeholder="Type here" class="form-control" id="product_name" />
                                <p><div id="error1" style="display: none;" class="alert alert-danger err">Name is required.</div></p>
                            </div>
                        
                            <div class="mb-4">
                                <label class="form-label">Description</label>
                                <input type="text" style="height: 100px; vertical-align: top;" name="description" value="<%= category.description %>" placeholder="Type here" class="form-control" id="product_description">
                                <p><div id="error2" style="display: none;" class="alert alert-danger err">Description is required.</div></p>
                            </div>
                        
                            <div class="d-grid">
                                <input type="submit" class="btn btn-primary" value= "Update Category">
                            </div>
                        </form>
                   
            </div> <!-- card body .// -->
        </div> <!-- card .// -->
    </section>


 
<script>

    
document.addEventListener("DOMContentLoaded", function(){
    const editCategory = document.getElementById('editCatId');
    const error1 = document.getElementById('error1');
    const error2 = document.getElementById('error2');

    function catValidation(){
        const name = document.getElementById('product_name').value.trim();
        const description = document.getElementById('product_description').value.trim();
        error1.style.display = 'none';
        error2.style.display = 'none';

        let isValid = true;
        if (name === '' && description === '') {
            error1.style.display = 'block';
            error2.style.display = 'block';
            isValid = false;
        }
        if (name === '') {
            error1.style.display = 'block';
            isValid = false;
        }
        if (description === '') {
            error2.style.display = 'block';
            isValid = false;
        }

        return isValid; 
    }

    editCategory.addEventListener("submit", function(e){
        if (!catValidation()) {
            e.preventDefault(); // Prevent form submission if validation fails
        }
    });

    document.getElementById('product_name').addEventListener("blur", catValidation);
    document.getElementById('product_description').addEventListener("blur", catValidation);
});

       

</script>


        
