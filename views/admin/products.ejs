<section class="content-main">
    <div class="content-header">
        <div>
            <h2 class="content-title card-title">Products </h2>
        </div>
        <div>
            <a href="addProducts" class="btn btn-primary btn-sm rounded">Create new</a>
        </div>
    </div>
    <div class="card mb-4">
        <div class="card-body">
            <div class="row gx-3 row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-xl-4 row-cols-xxl-5">

                <% for(let i=0; i<product.length; i++) { %>
                    <div class="col">
                        <div class="card card-product-grid">
                            <!-- <a href="#" class="img-wrap"> -->
                                <img class="imgStyle" src="/assets/adminAssets/imgUploads/<%= product[i].productImage[0] %>" alt="Product">
                            </a>
                            <div class="info-wrap">
                                <a href="#" class="title text-truncate"><%= product[i].productName %></a>
                                <div class="price mb-2">$<%= product[i].regularPrice %></div>
                                <a href="/admin/editProduct/<%= product[i]._id %>">
                                    <button class="btn btn-sm font-sm btn-brand rounded">Edit</button>
                                </a>
                                
                                
                                <% if (product[i].isBlocked === true) { %>
                                    <a href="/admin/productBlock?productName=<%= product[i].productName %>">
                                        <button class="toggleBtn btn btn-sm font-sm btn-brand rounded">Unblock</button>
                                    </a>
                                <% } else { %>
                                    <a href="/admin/productBlock?productName=<%= product[i].productName %>">
                                        <button class="toggleBtn btn btn-sm font-sm btn-brand rounded">Block</button>
                                    </a>
                                <% } %>   
                            </div>
                        </div> 
                    </div> 
                <% } %>
                
            </div> 
        </div> 
    </div>
</section> 
