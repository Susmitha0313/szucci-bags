<section class="content-main">
    <div class="content-header">
        <h2 class="content-title">User list</h2>
        <div>
            <a href="/signup" class="btn btn-primary"><i class="material-icons md-plus"></i> Create new</a>
        </div>
    </div>
    <div class="card mb-4">
        <header class="card-header">
            <div class="row gx-3">
                <div class="col-lg-4 col-md-6 me-auto">
                    <input type="text" placeholder="Search..." class="form-control">
                </div>
                <div class="col-lg-2 col-md-3 col-6">
                    <select class="form-select">
                        <option>Status</option>
                        <option>Active</option>
                        <option>Disabled</option>
                        <option>Show all</option>
                    </select>
                </div>
                <div class="col-lg-2 col-md-3 col-6">
                    <select class="form-select">
                        <option>Show 20</option>
                        <option>Show 30</option>
                        <option>Show 40</option>
                    </select>
                </div>
            </div>
        </header> <!-- card-header end// -->
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Seller</th>
                            <th>Email</th>
                            <th>Status</th>

                            
                        </tr>
                    </thead>
                    <tbody>
                        <% user.forEach(element => { %>
                        <tr>
                            <td width="40%">
                                <a href="#" class="itemside">
                                    <div class="left">
                                        <img src="/assets/adminAssets/imgs/people/avatar2.jpg" class="img-sm img-avatar" alt="Userpic">
                                    </div>
                                    <div class="info pl-3">
                                        <h6 class="mb-0 title"><%= element.name %></h6>
                                    </div>
                                </a>
                            </td>
                            <td><%= element.email %></td>
                            <td>
                                <% if (element.isBlocked === true) { %>
                                    <a href="/admin/userBlock?id=<%= element._id %> "><button  class="toggleBtn btn btn-sm font-sm btn-brand rounded" >Unblock</button></a>
                                
                                <% }else{ %>
                                    <a href="/admin/userBlock?id=<%= element._id %> "><button  class="toggleBtn btn btn-sm font-sm btn-brand rounded">Block</button></a>  
                                    <% } %>
                              
                              </td>
                        </tr>
                        <% }) %> 
                    </tbody>
                </table> <!-- table-responsive.// -->
            </div>
        </div> <!-- card-body end// -->
    </div> <!-- card end// -->
    <div class="pagination-area mt-15 mb-50">
        <nav aria-label="Page navigation example">
            
        </nav>
    </div>
</section>





