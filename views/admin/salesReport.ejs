        </header>
        <div class="card-body">
            <div class="table-responsive">
                <table id="orderTable" class="table table-hover">
                    <thead>
                        <tr>
                            <th>OrderId</th>
                            <th scope="col">Name</th>
                            <th scope="col">Email</th>
                            <th scope="col">Total</th>
                            <th scope="col">Status</th>
                            <th scope="col">Date</th>
                            <th scope="col" class="text-end"> Action </th>
                        </tr>
                    </thead>
                    <tbody>
                    <% orderData.sort((a, b) => new Date(b.orderDate) - new Date(a.orderDate)); %>
                    
                        <% orderData.forEach((order)=>{ %>
                        <tr>
                            <td><%= order.orderNumber %></td>
                            <td><b><%= order.shippingAddress.name %></b></td>
                            <td><%= order.userEmail %></td>
                            <td>â‚¹<%= order.totalAmount %></td>
                            <% if(order.status === "Cancelled") {%>
                            <td><span class="badge rounded-pill bg-danger"><%= order.status %></span></td>
                            <% } else if(order.status === "Confirmed"){ %>
                            <td><span class="badge rounded-pill bg-success"><%= order.status %></span></td>
                            <% } else if(order.status === "Shipped"){ %>
                            <td><span class="badge rounded-pill bg-info text-dark"><%= order.status %></span></td>
                            <% } else if(order.status === "Delivered"){ %>
                            <td><span class="badge rounded-pill bg-primary"><%= order.status %></span></td>
                            <% } else if(order.status === "Processing"){ %>
                            <td><span class="badge rounded-pill bg-secondary"><%= order.status %></span></td>
                            <% } else if(order.status === "Returned"){ %>
                            <td><span class="badge rounded-pill bg-dark"><%= order.status %></span></td>
                            <% } else if(order.status === "RequestProcessing"){ %>
                            <td><span class="badge rounded-pill text-danger bg-secondary"><%= order.status %></span></td>

                            <% } %>  
                            
                            <td><%= order.orderDate.toLocaleDateString()  %></td>
                            <td class="text-end">
                                <a href="/admin/orderEdit/?id=<%= order._id %>" class="btn btn-md rounded font-sm">Detail</a>
                                <div class="dropdown">
                                    <a href="#" data-bs-toggle="dropdown" class="btn btn-light rounded btn-sm font-sm"> <i class="material-icons md-more_horiz"></i> </a>
                                    <div class="dropdown-menu">
                                       
                                        <a class="dropdown-item" href="/admin/orderEdit/?id=<%= order._id %>">View and Edit </a>
                                        <a class="dropdown-item text-danger" href="/admin/deleteOrder/?id=<%= order._id %>">Delete</a>
                                    </div>
                                </div> <!-- dropdown //end -->
                            </td>
                        </tr>
                        <% }) %>
                      
                    </tbody>
                </table>
            </div> <!-- table-responsive //end -->
